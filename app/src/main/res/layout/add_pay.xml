<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.Add_Money_Activity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageButton
            android:id="@+id/add_way_select"
            android:layout_width="45dp"
            android:layout_weight="0.3"
            android:layout_height="45dp"
            android:background="@drawable/alipay"/>
            <TextView
                android:id="@+id/pay_way_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textColor="#000000"
                android:layout_gravity="center"/>
        </LinearLayout>
        <EditText
            android:id="@+id/money"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:hint="输入支出金额"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColorHint="#666666"
            android:inputType="numberDecimal"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/radio_group1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/food"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_food_change"
                android:button="@null"
                android:text="餐饮"
                android:gravity="center"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/travel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_travel_change"
                android:button="@null"
                android:text="旅行"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/shop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_shop_change"
                android:button="@null"
                android:text="购物"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/traffic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_traffic_change"
                android:button="@null"
                android:text="交通"
                android:gravity="center"/>
        </RadioGroup>
        <RadioGroup
            android:id="@+id/radio_group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <RadioButton
                android:id="@+id/communication"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_communication_change"
                android:button="@null"
                android:text="通讯"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/hospital"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_hospital_change"
                android:button="@null"
                android:text="医疗"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/house"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_house_change"
                android:button="@null"
                android:text="住房"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/child"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_child_change"
                android:button="@null"
                android:text="育儿"
                android:gravity="center"/>
        </RadioGroup>
        <RadioGroup
            android:id="@+id/radio_group3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <RadioButton
                android:id="@+id/study"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_study_change"
                android:button="@null"
                android:text="文教"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/play"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_play_change"
                android:button="@null"
                android:text="娱乐"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/pet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_pet_change"
                android:button="@null"
                android:text="宠物"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/interest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_interest_change"
                android:button="@null"
                android:text="生活"
                android:gravity="center"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/date_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="今天"
            android:gravity="center"
            android:textSize="16sp"
            android:drawableTop="@drawable/ic_date_range_black_24dp"/>
        <EditText
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入备注信息(最多140字)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColorHint="#666666"
            android:inputType="text"
            android:maxLines="1"/>
    </LinearLayout>
    <Button
        android:id="@+id/ok"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="确定"
        android:layout_gravity="center"
        android:background="@drawable/pay_income_state_pressed"
        android:textStyle="bold"
        android:textSize="18sp"/>
</LinearLayout>