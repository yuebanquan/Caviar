<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.Add_Money_Activity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/add_way_select2"
                android:layout_width="45dp"
                android:layout_weight="0.3"
                android:layout_height="45dp"
                android:background="@drawable/alipay"/>
            <TextView
                android:id="@+id/pay_way_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textColor="#000000"
                android:layout_gravity="center"/>
        </LinearLayout>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:hint="输入收入金额"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColorHint="#666666"
            android:inputType="numberDecimal"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/radio_group4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_money_change"
                android:button="@null"
                android:text="奖金"
                android:gravity="center"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/salary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_salary_change"
                android:button="@null"
                android:text="工资"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/invest_income"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_invest_change"
                android:button="@null"
                android:text="投资收益"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/repay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_repay_change"
                android:button="@null"
                android:text="报销"
                android:gravity="center"/>
        </RadioGroup>
        <RadioGroup
            android:id="@+id/radio_group5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <RadioButton
                android:id="@+id/borrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_borrow_change"
                android:button="@null"
                android:text="借入"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/invest_recover"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_reinvest_change"
                android:button="@null"
                android:text="投资回收"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/collect_debts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_collectdebts_change"
                android:button="@null"
                android:text="收债"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/red_paper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_redpaper_change"
                android:button="@null"
                android:text="红包"
                android:gravity="center"/>
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/date_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="今天"
            android:gravity="center"
            android:textSize="16sp"
            android:drawableTop="@drawable/ic_date_range_black_24dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入备注信息(最多140字)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColorHint="#666666"
            android:inputType="text"
            android:maxLines="1"/>
    </LinearLayout>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="确定"
        android:layout_gravity="center"
        android:background="@drawable/pay_income_state_pressed"
        android:textStyle="bold"
        android:textSize="18sp"/>
</LinearLayout>